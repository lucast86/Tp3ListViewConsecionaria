<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8sp">

    <ImageView
        android:id="@+id/imgAutoImagen"
        android:layout_width="98dp"
        android:layout_height="118dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/auto_1"
        tools:srcCompat="@drawable/auto_1" />

    <TextView
        android:id="@+id/txtAutoNonbre"
        android:layout_width="243dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/imgAutoImagen"
        app:layout_constraintTop_toTopOf="@+id/imgAutoImagen" />

    <TextView
        android:id="@+id/txtAutoPrecio"
        android:layout_width="259dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/imgAutoImagen"
        app:layout_constraintTop_toBottomOf="@+id/txtAutoNonbre" />

    <TextView
        android:id="@+id/txtAutoDatos"
        android:layout_width="95dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/imgAutoImagen"
        app:layout_constraintStart_toEndOf="@+id/imgAutoImagen" />

    <TextView
        android:id="@+id/txtAutoModelo"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:text="TextView"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/txtAutoDatos"
        app:layout_constraintStart_toEndOf="@+id/txtAutoDatos" />

    <TextView
        android:id="@+id/txtAutoCiudad"
        android:layout_width="106dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:text="TextView"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/txtAutoModelo"
        app:layout_constraintStart_toEndOf="@+id/txtAutoModelo" />
</androidx.constraintlayout.widget.ConstraintLayout>